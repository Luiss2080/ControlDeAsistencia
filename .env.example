# Variables de Entorno - Sistema de Control de Asistencia
# Copiar a .env y configurar con valores reales

# Configuración de la aplicación
APP_NAME="Sistema de Control de Asistencia"
APP_ENV=production
APP_DEBUG=false
APP_URL=http://localhost
APP_TIMEZONE=America/Mexico_City

# Base de datos MySQL
DB_HOST=localhost
DB_PORT=3306
DB_NAME=control_asistencia
DB_USER=root
DB_PASS=

# Redis (opcional, para caché y sesiones)
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Seguridad
JWT_SECRET=genere_una_clave_muy_segura_de_al_menos_32_caracteres
SESSION_SECRET=otra_clave_secreta_para_sesiones

# Email SMTP
MAIL_DRIVER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=tu_email@gmail.com
MAIL_PASSWORD=tu_password_de_aplicacion
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@empresa.com
MAIL_FROM_NAME="Sistema de Asistencia"

# Configuraciones específicas del sistema
EMPRESA_NOMBRE="Mi Empresa S.A."
HORARIO_ENTRADA_DEFAULT=08:00
HORARIO_SALIDA_DEFAULT=17:00
TOLERANCIA_ENTRADA=15
TOLERANCIA_SALIDA=30

# API y dispositivos
API_RATE_LIMIT=100
DISPOSITIVOS_TOKEN_EXPIRY=86400

# Backup y logs
BACKUP_ENABLED=true
BACKUP_TIME=02:00
LOG_LEVEL=info
LOG_ROTATION=daily